<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="iconImageViewStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="buttonWithTitleStyle">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">@dimen/_0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_background_selection</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_marginTop">@dimen/_5dp</item>
        <item name="android:layout_marginBottom">@dimen/_5dp</item>
        <item name="android:layout_marginStart">@dimen/_10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="horizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1dp</item>
        <item name="android:layout_marginEnd">@dimen/_10dp</item>
        <item name="android:layout_marginStart">@dimen/_20dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">@dimen/_18dp</item>
    </style>

    <style name="answerButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_marginEnd">@dimen/_5dp</item>
        <item name="android:paddingStart">@dimen/_15dp</item>
        <item name="android:paddingEnd">@dimen/_15dp</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:background">@drawable/shape_stroke_rounded_light_grey</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="imageButtonStyle">
        <item name="android:layout_width">@dimen/_20dp</item>
        <item name="android:layout_height">@dimen/_20dp</item>
        <item name="backgroundColor">@color/black</item>
        <item name="android:layout_marginEnd">@dimen/_15dp</item>
    </style>



    <style name="NavigationViewStyle" parent="Widget.Material3.NavigationView">
        <item name="android:background">@color/light_grey</item>
        <item name="itemShapeAppearance">@drawable/nav_color</item>
        <item name="drawerLayoutCornerSize">@dimen/_0dp</item>
        <item name="itemShapeInsetStart">@dimen/_0dp</item>

    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/light_grey</item>
        <item name="android:itemBackground">@drawable/ic_notification_selection</item>
    </style>



</resources>

